{#
  Displays a Drupal account's in-game accounts. The player avatars
  are generated by the ORSC server source, and are linked to the
  website.
#}

{% if items %}
  <div class="cards">
    {% for item in items %}
      <div class="card card--account">
        <div class="card--account__internal">

          <img src="/assets/rsc_avatars/{{ item.id }}.png"/>
          <h2><a href="/user/account/{{ item.id}}/account-information">{{ item.username }}</a></h2>
          <div>Combat Level: {{ item.combat }}</div>
          <div>Last Login: {{ item.login_date }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}
